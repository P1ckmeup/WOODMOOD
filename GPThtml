    <script>
        function setLanguage(language) {
            document.querySelectorAll('[data-lang]').forEach(element => {
                if (element.getAttribute('data-lang') === language) {
                    element.style.display = '';
                } else {
                    element.style.display = 'none';
                }
            });
        }

        // 设置默认语言为中文
        setLanguage('zh');
    </script>
